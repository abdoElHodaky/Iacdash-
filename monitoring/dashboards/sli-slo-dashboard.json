{
  "dashboard": {
    "id": null,
    "title": "SLI/SLO Dashboard - Gateway API Success Metrics",
    "tags": ["gateway-api", "sli", "slo", "performance"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "P95 Latency SLI (Target: < 100ms)",
        "type": "stat",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(istio_request_duration_milliseconds_bucket{source_app=\"istio-proxy\"}[5m])) by (le))",
            "legendFormat": "P95 Latency",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 80},
                {"color": "red", "value": 100}
              ]
            },
            "unit": "ms"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "mTLS Coverage SLI (Target: 100%)",
        "type": "stat",
        "targets": [
          {
            "expr": "(sum(rate(istio_requests_total{security_policy=\"mutual_tls\"}[5m])) / sum(rate(istio_requests_total[5m]))) * 100",
            "legendFormat": "mTLS Coverage %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 95},
                {"color": "green", "value": 100}
              ]
            },
            "unit": "percent"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Uptime SLI (Target: 99.99%)",
        "type": "stat",
        "targets": [
          {
            "expr": "(1 - (sum(rate(istio_requests_total{response_code!~\"2..\"}[5m])) / sum(rate(istio_requests_total[5m])))) * 100",
            "legendFormat": "Uptime %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 99.9},
                {"color": "green", "value": 99.99}
              ]
            },
            "unit": "percent"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Deployment Velocity SLI (Target: 50% faster)",
        "type": "stat",
        "targets": [
          {
            "expr": "avg_over_time(deployment_duration_seconds[24h])",
            "legendFormat": "Avg Deployment Time",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 300},
                {"color": "red", "value": 600}
              ]
            },
            "unit": "s"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 5,
        "title": "Error Rate SLI",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(istio_requests_total{response_code!~\"2..\"}[5m])) / sum(rate(istio_requests_total[5m]))",
            "legendFormat": "Error Rate",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Error Rate",
            "max": 0.1,
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16}
      },
      {
        "id": 6,
        "title": "Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(istio_requests_total[5m]))",
            "legendFormat": "Requests/sec",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24}
      },
      {
        "id": 7,
        "title": "Resource Utilization",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total{namespace=\"istio-system\"}[5m])) by (pod)",
            "legendFormat": "CPU Usage - {{pod}}",
            "refId": "A"
          },
          {
            "expr": "sum(container_memory_usage_bytes{namespace=\"istio-system\"}) by (pod) / 1024 / 1024",
            "legendFormat": "Memory Usage - {{pod}}",
            "refId": "B"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24}
      },
      {
        "id": 8,
        "title": "SLO Burn Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "(\n  (\n    sum(rate(istio_requests_total{response_code!~\"2..\"}[1h]))\n    /\n    sum(rate(istio_requests_total[1h]))\n  )\n  /\n  (1 - 0.9999)\n)",
            "legendFormat": "1h Burn Rate",
            "refId": "A"
          },
          {
            "expr": "(\n  (\n    sum(rate(istio_requests_total{response_code!~\"2..\"}[5m]))\n    /\n    sum(rate(istio_requests_total[5m]))\n  )\n  /\n  (1 - 0.9999)\n)",
            "legendFormat": "5m Burn Rate",
            "refId": "B"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 32}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
}

